{
  "family": "spicecraft-task",
  "networkMode": "bridge",  // Change from "awsvpc" to "bridge" for EC2
  "requiresCompatibilities": ["EC2"],  // Set compatibility to EC2
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::051826709341:role/spiceCraftEcsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::051826709341:role/spiceCraftEcsTaskRole",
  "containerDefinitions": [
    {
      "name": "spicecraft-client-container",
      "image": "051826709341.dkr.ecr.ap-southeast-2.amazonaws.com/spicecraft-client:latest",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/spicecraft-client-logs",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "spicecraft-client"
        }
      }
    },
    {
      "name": "spicecraft-server-container",
      "image": "051826709341.dkr.ecr.ap-southeast-2.amazonaws.com/spicecraft-server:latest",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/spicecraft-server-logs",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "spicecraft-server"
        }
      }
    }
  ]
}
