{
  "family": "spicecraft-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::051826709341:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::051826709341:role/ecsTaskRole",
  "volumes": [
    {
      "name": "uploads-volume",
      "efsVolumeConfiguration": {
        "fileSystemId": "${efsFileSystemId}",  // Replace with your EFS File System ID
        "transitEncryption": "ENABLED",
        "rootDirectory": "/"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "spicecraft-client-container",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/spicecraft-client:${IMAGE_TAG}",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "uploads-volume",
          "containerPath": "/uploads/items",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/spicecraft-client-logs",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "spicecraft-client"
        }
      }
    },
    {
      "name": "spicecraft-server-container",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/spicecraft-server:${IMAGE_TAG}",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "uploads-volume",
          "containerPath": "/uploads/profiles",
          "readOnly": false
        },
        {
          "sourceVolume": "uploads-volume",
          "containerPath": "/uploads/common",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/spicecraft-server-logs",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "spicecraft-server"
        }
      }
    }
  ]
}
