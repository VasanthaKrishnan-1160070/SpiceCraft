{
  "family": "spicecraft-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "spicecraft-container",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/spicecraft-repo:latest",
      "cpu": 512,
      "memory": 1024,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        },
        {
          "containerPort": 8081,
          "hostPort": 8081
        }
      ]
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::603763212525:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::603763212525:role/ecsTaskRole"
}
